/*
 Projectile
 Abstract class of Projectile objects.
 @author Ken Tjie
 @version 1.4 2016 - 06 - 01
*/

import java.awt.Graphics;
import java.awt.Graphics2D;

public abstract class Projectile {
  protected int x, y, maxX, maxY, radius;
  
  public abstract void move(int level, Character target);
  
  public void setX (int x) {
    this.x = x;
    maxX = this.x + 2  * radius;
  }//setX
  
  public int getX () {
    return x;
  }//end getX
  
  public void setY (int y) {
    this.y = y;
  }//end getY
  
  public int getY () {
    return y;
  }//end getY
  
  public void setMaxX (int x) {
    maxX = x;
  }//setMaxX
  
  public int getMaxX () {
    return maxX;
  }//end getMaxX
  
  public void setMaxY (int y) {
    maxY = y;
  }//end getMaxY
  
  public int getMaxY () {
    return maxY;
  }//end getMaxY
  
  public boolean isColliding(Character colidee) {
    if (colidee.getMaxX() < x)
      return false;
    
    if (colidee.getX() > maxX)
      return false;
    
    if (colidee.getY() > maxY)
      return false;
    
    if (colidee.getMaxY() < y)
      return false;
    
    return true; 
  }//end isColliding
  
  public abstract void collisionReaction(Character attacker, Character defender);
  public abstract void draw(Graphics gc);
}//end class